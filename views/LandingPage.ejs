<!DOCTYPE html>
<html dir="rtl" lang="he">
<head>

    <script type="text/javascript" src="/javascripts/main.js"></script>
    <script type="text/javascript" src="/javascripts/GeneralFunctions.js"></script>
    <script type="text/javascript" src="/javascripts/geocode.js"></script>
    <script type="text/javascript" src="/javascripts/buildDataBase.js"></script>



    <%- include('include/start.ejs') %>
    <%- include('include/titleWeb.ejs') %>
    <%- include('include/modle.ejs') %>

    <div class="col-12 col-md-3 col-lg-3 d-flex flex-row-reverse mb-3 items-center order-2 xl:order-3  xl:ml-0 xl:mr-5 p-2 relative z-40">
        <div class=" p-2">
            <a href="/login" class="bg-warning " style="height: 50px; width: 50px;background-color:gold;border-radius:100%; display: inline-block;;"><i class="material-icons w3-xxlarge  p-2" >person</i></a><span><p><%= userName %>  </p></span></div>
        <div class="p-2"><button type="button" class="btn btn-warning rounded-pill" data-toggle="modal" data-target="#exampleModalCenter"><span><i class="material-icons">search</i></span>  חפש ב... </button></div>

    </div></div>
    <div class="p-2" style=" border-top: 3px solid #bbb;"></div>


    <div class="container-fluid  text-right">
        <div class="col-12 container text-center  bg-light ">
            <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner  ">
                    <div class="carousel-item active ">
                        <img class="d-block rounded mx-auto img-fluid "width = 800px height=400px src="/images/bg-1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block rounded mx-auto"width = 800px height=400px src="/images/bg-2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block rounded mx-auto" width = 800px height=400px src="/images/bg-3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class=" alert p-3 mb-2  text-warning center">
            <h2 class="heading-h2"> <span><i class="fa fa-bars"></i></span> סינון אטרקציות</h2></div>
            <div class="row row-cols-1 row-cols-md-3 g-4 card-deck p-3 m-2" >
                <div class="col p-2">
                    <div class=" card  shadow h-100">
                        <img class="card-img-top"  src="/images/type-1.jpg"  style=" cursor: pointer;"id="type"  alt="Card image cap javascript button">
                        <div class="card-body">
                            <h3 class="card-title">סינון לפי סוגים</h3>
                            <form  action="/attraction" method="post" id="qw">
                            <div class="d-none" id="listType">
                                <div class="input-group-prepend">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attPark" name="att" value="park" onchange="this.form.submit()">
                                    <label for="attPark">פארקים</label>
                                </div>
                                <div class="input-group-prepend">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attMuseum" name="att" value="museum" onchange="this.form.submit()">
                                    <label for="attMuseum">מוזאונים</label>
                                </div>
                                <div class="input-group-prepend">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attShopping" name="att" value="shopping" onchange="this.form.submit()">
                                    <label for="attShopping">קניונים</label>
                                </div>
                                <div class="input-group-prepend" >
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attRestaurant" name="att" value="restaurant" onchange="this.form.submit()">
                                    <label for="attRestaurant">מסעדות</label>
                                </div>
                                <div class="input-group-prepend" >
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attZoo" name="att" value="zoo" onchange="this.form.submit()">
                                    <label for="attZoo">גן חיות</label>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col p-2">
                    <div class=" card  shadow h-100">
                        <img class="card-img-top" src="/images/type-4.jpg"  style=" cursor: pointer;" id="age" alt="Card image cap javascript button">
                        <div class="card-body">
                            <h3 class="card-title">סינון לפי גילאים</h3>
                            <form  action="/attraction/age" method="post" >
                            <div class="d-none" id="listAge" >
                                <div class="form-group-prepend">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attAgeChild"  name="age" value="children" onchange="this.form.submit()" required>
                                    <label for="attAgeChild">ילדים</label>
                                </div>
                                <div class="form-group-prepend">
                                    <input type="checkbox" aria-label="Checkbox for following text input" id="attAgeFamily"  name="age" value="families" onchange="this.form.submit()">
                                    <label for="attAgeFamily">  משפחות ומבוגרים</label>
                                </div>

                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</div>

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script
            src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap&libraries=&v=weekly"

            async
    ></script>

    <%- include('include/end.ejs') %>


